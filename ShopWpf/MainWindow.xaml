<Window x:Class="ShopWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopWpf"
        mc:Ignorable="d"
        Title="Api Controller" Height="400" Width="800">
    <Grid>

        <Grid ShowGridLines="True" Background="#FFE5E5E5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="1" Grid.Row="0">
                
            </Grid>
            
            <Grid Grid.Column="0" Grid.Row="0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                
                <TabControl>
                    <TabItem Header="Developer">
                        <DataGrid x:Name="DevGrid" Grid.Column="0" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    </TabItem>
                    <TabItem Header="User">
                        <DataGrid x:Name="UserGrid" Grid.Column="0" Grid.Row="0" d:ItemsSource="{d:SampleData ItemCount=3}"/>
                    </TabItem>
                </TabControl>
                
                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Width="150" Height="30" VerticalAlignment="Top" Margin="0,50,0,0" Background="Cyan" Content="Get" Click="Button_Click"></Button>
                    <Button Grid.Column="1" Grid.Row="0" Width="150" Height="30" VerticalAlignment="Top" Margin="0,50,0,0" Background="Lime" Content="Post"></Button>
                    <Button Grid.Column="2" Grid.Row="0" Width="150" Height="30" VerticalAlignment="Top" Margin="0,50,0,0" Background="Orange" Content="Put"></Button>
                    <Button Grid.Column="3" Grid.Row="0" Width="150" Height="30" VerticalAlignment="Top" Margin="0,50,0,0" Background="red" Content="Delete"></Button>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
